SELECT 
    TABLE_CATALOG,
    TABLE_SCHEMA,
    TABLE_NAME,
    CREATED
FROM 
    INFORMATION_SCHEMA.VIEWS
WHERE 
    TABLE_NAME = 'YOUR_VIEW_NAME';


