SELECT 
    GRANTEE_NAME AS USER_NAME,
    ROLE
FROM 
    SNOWFLAKE.ACCOUNT_USAGE.GRANTS_TO_USERS
WHERE 
    GRANTEE_NAME = 'JOHN.SMITH';

