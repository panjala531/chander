SHOW GRANTS ON DATABASE your_database_name;


============================

SHOW GRANTS ON DATABASE ARIP;


--------------------------

SELECT 
    GRANTEE_NAME AS ROLE_NAME,
    PRIVILEGE
FROM 
    SNOWFLAKE.ACCOUNT_USAGE.GRANTS_TO_ROLES
WHERE 
    OBJECT_TYPE = 'DATABASE'
    AND OBJECT_NAME = 'ARIP';
-----------------------------------

SELECT *
FROM SNOWFLAKE.ACCOUNT_USAGE.GRANTS_TO_ROLES
WHERE OBJECT_TYPE = 'SCHEMA'
  AND OBJECT_NAME = 'MASTER';  -- your schema name
